    <title>Febnine-admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <link href="http://localhost:3000/stylesheets/admin.css" rel="stylesheet">
</head>
<body>
<div class="container bootstrap snippets bootdeys">
  <div class="row">
    <div class="col-xs-12 col-sm-9">
      <form class="form-horizontal" action="/foods" method="post" enctype="multipart/form-data">
        <div class="panel panel-default">
          <div class="panel-body text-center">
            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" class="img-circle profile-avatar" alt="User avatar">
          </div>
        </div>
      <div class="panel panel-default">
        <div class="panel-heading">
        <h4 class="panel-title">음식점 info</h4>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label">음식점 종류</label>
            <div class="col-sm-10">
                <label><input type="checkbox" name="tag[]" value="1">술집 </label>
                <label><input type="checkbox" name="tag[]" value="2">카페 </label>
                <label><input type="checkbox" name="tag[]" value="3">음식점 </label>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">음식점 이름</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name= "name" value="<%=place%>" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">음식점 위치(주소)</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="location" value="<%= address%>" readonly>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">음식점 comment</label>
            <div class="col-sm-10">
              <textarea rows="6" class="form-control" name="description" placeholder="음식점에 대해서 쓰고 싶은 내용을 쓰세요."></textarea>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">평점</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" name= "grade" placeholder="0.0 ~ 5.0">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">음식점 사이트</label>
            <div class="col-sm-10">
              <input type="url" class="form-control" name="site" value="<%=url%>" readonly>
            </div>
          </div>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
        <h4 class="panel-title">Image</h4>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label">썸네일(1장)</label>
            <div class="col-sm-10">
              <input type="file" name="thumbnail" class="form-control" accept="image/*">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">일반 사진(최대 5장)</label>
            <div class="col-sm-10">
              <input type="file" name="content" class="form-control" multiple accept="image/*">
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="reset" class="btn btn-default">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  </div>
</div>
</body>
</html>